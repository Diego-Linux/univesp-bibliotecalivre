<% include header.ejs %>
    <br /><br />
    <form action="/book" method="GET">
        <h3 style="margin-top:10px; color:crimson; margin-left:80px;">
            Livros disponíveis</h3><br/>
        <div class="search-container">
            <div class="search-div">
                <select name="category" id="category" class="search-select" onchange="this.form.submit()">
                    <option value="">Todas as categorias</option>
                    <option value="Geral" <% if (selectedCategory==='Geral' ) { %>selected<% } %>>Geral</option>
                    <% categories.forEach(category=> { %>
                        <option value="<%= category %>" <% if (category===selectedCategory) { %>selected<% } %>><%=
                                    category %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="search-div">
                <input class="search-input" placeholder="Digite o título do livro que procura" name="search"
                    id="search">
            </div>
            <div class="search-div">
                <button type="submit" class="btn-search">Pesquisar</button>
            </div>
        </div>
    </form>
    <div class="div-pagination">
        <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                <a class="page-link" href="/book?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
        </ul>
    </div>
    <div class="main-container">
        <div class="container">
            <% if (books.length===0) { %>
                <p class="alert alert-danger">Não há livros disponíveis.</p>
                <% } else { %>
                    <% for (let book of books) { %>
                        <div class="card" onclick="window.location.href = '/book/<%= book.id %>'">
                            <img src="<%= book.image %>" alt="">
                            <div class="card-content">
                                <a href="/book/<%= book.id %>">
                                    <%= book.name %>
                                </a>
                            </div>
                        </div>
                        <% } %>
                            <% } %>
                                <!-- Adicione mais cartões conforme necessário -->
        </div>
    </div>

    <% include footer.ejs %>